    function ModalMensagemSpp(mensagem, title, btnOkClass, type) {
        console.log(mensagem);
        BootstrapDialog.show({
            type: type,
            title: title,
            btnOKClass: btnOkClass,
            message: function (dialogRef) {
                var $content = $('<div><a href="javascript:void(0);" class="text-center" id="visualiazrSpp">' + mensagem + '</a></div>');
                $content.on('click', { dialogRef: dialogRef }, function () {
                    ChamaBaixa();
                    dialogRef.close();
                });

                return $content;
            },
            buttons: [{
                id: 'btn-fechar',
                label: 'Fechar',
                cssClass: 'btn-default btn-sm',
                action: function (dialogItself) {
                    dialogItself.close();
                }
            }]
        });
    }

</script>




    <script type="text/javascript">

        var urlRetorno = '';


        $(function () {
            numeral.language('pt-br'); // traduzir para o português os numeros
            $('select').select2();
            CarregarDadosSistema();

            $('html').on('click', '.load', function (e) {
                runLoad();

                setTimeout(function () {
                    fechaModal();
                }, 1000);
            });

            // Init Theme Core
            Core.init();

            // Init Demo JS
            Demo.init();
            ActiveMenu();

        });

        function ActiveMenu() {
            var href = this.location.pathname;
            $($('a[href="' + href + '"]').closest('ul').parent().find('a')[0]).addClass('menu-open');
            $('a[href="' + href + '"]').closest('li').addClass('active').siblings().removeClass('active');

            //Criar caminho do sistema ela será iniciada após a ativação do menu selecionado
            CreateBreadCrumb();
        }

        function CarregarDadosSistema() {
            $('.versaoServidor').text('@nomeAbiente');
            $('.versaoSistema').text('Versão: ' + '@versaoSistema');
        }

        //Função para criar o caminho do sistema
        function CreateBreadCrumb() {
            $("#caminho").empty();
            var html = '<li class="crumb-active"><a href="/Home">Home</a></li>';
            var subMenu = $('.sub-nav > li.active > a').text().trim();
            var menu = $('.sub-nav > li.active > a').closest('ul').siblings().text().trim();

            if (menu != "") {
                html += '<li class="crumb-link"><a href="javascript:void(0);">' + menu + '</a></li>';

                if (subMenu != "") {
                    html += '<li class="crumb-link"><a href="javascript:void(0);">' + subMenu + '</a></li>';
                }
            }

            $("#caminho").append(html);
        }

        //Faz a rotina de procura do menu (início)
        var criaInput = true;

        $.extend($.expr[":"], {
            "containsIN": function (elem, i, match, array) {
                return (elem.textContent || elem.innerText || "").toLowerCase().indexOf((match[3] || "").toLowerCase()) >= 0;
            }
        });

        $('html').on('click', '#menuPrincipal', function () {
            if ($("#buscaMenu").length == 0 && criaInput) {
                $(this).append("<div class='input-group' id='dvPesquisa' style='width:220px;'><input class='form-control input-sm' id='buscaMenu' type='text' name='buscaMenu' width='110'/><span class='input-group-addon input-sm fechaPesquisa'><i class='fa fa-times fechaPesquisa'></i></span></div>");
                $(this).append("<li id='exibeBuscados' style='display: none;'></li>");
                $("#buscaMenu").focus();
            }
            criaInput = true;
        });

        $('html').on('click', '.fechaPesquisa', function () {
            $("#buscaMenu").val('').trigger('keyup');
            $("#dvPesquisa").remove();
            $("#exibeBuscados").remove();
            criaInput = false;
        });

        $('html').on('keyup', '#buscaMenu', function () {
            var $that = $(this);
            $.each($that.parent().parent().siblings(), function (i, e) {
                if ($that.val() == "") {
                    $(e).show();
                    $("#exibeBuscados").empty();
                    $("#exibeBuscados").css('display', 'none');
                } else {
                    $("#exibeBuscados").empty();
                    var x = $("div.nano-content").find("a:containsIN('" + $that.val() + "')").clone();
                    $("#exibeBuscados").css('display', 'inline');
                    $.each(x, function (i, e) {
                        $("#exibeBuscados").append("<li style='margin-top: 7px;'><a href='" + $(e).prop('href') + "'style='font-weight:normal;'>" + $(e).text().trim() + "</a></li>");
                    })
                    $(e).hide();
                }
            })
        });
        //Faz a rotina de procura do menu (fim)

    </script>
